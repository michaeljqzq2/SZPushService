@model IEnumerable<SZPushService.Model.Keyword>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Key</title>
    <style>
        form, .form-inline .form-control {
            margin-left:10px;
            margin-top:10px;
            display: inline-block;
            width: auto;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <div>
        @Html.ActionLink("Home", "Index", null, new { @class = "btn btn-default navi" })
    </div>
@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { @class = "form-inline" }))
{
    @Html.TextBox("Word", null, new { @class = "form-control" });
    @Html.Hidden("IsEnabled", true);
    <input class="btn btn-sm btn-success form-control"
           type="submit" value="+" />
}
@foreach (var item in Model.OrderByDescending(x => x.IsEnabled))
{
    @Html.Partial("~/Views/Home/KeywordEditor.cshtml", item)
    ;
}

</body>
</html>